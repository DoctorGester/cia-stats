doctype html
html
  head
    link(rel="stylesheet", href="http://yui.yahooapis.com/pure/0.6.0/pure-min.css")
    meta(name="viewport", content="width=device-width, initial-scale=1")
    title= Memes
  body
    table.pure-table
        tbody
            for player in model
                tr
                    td #{player.steamId64}

                    if player.streak
                        td +#{player.streak.max}
                    else
                        td #{player.rank}